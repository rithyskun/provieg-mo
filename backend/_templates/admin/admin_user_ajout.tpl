<form method="post">
    <fieldset>
        <legend>Create new user</legend>
	    <dl class="table-display">
			<dt><label for="login_user" >Login (generaly email) *</label></dt>
			<dd><input type="text" name="login_user" id="login_user" size="53" maxlength="255" autocomplete="off" class="oblig" /></dd>
			
			<dt><label for="mot_de_passe" >Password *</label></dt>
			<dd><input type="password" name="mot_de_passe" id="mot_de_passe" size="53" maxlength="255" autocomplete="off" class="oblig" /></dd>	
            				
			<dt><label for="remot_de_passe" >Repeat password *</label></dt>
			<dd><input type="password" name="remot_de_passe" id="remot_de_passe" size="53" maxlength="255" autocomplete="off" class="oblig" /></dd>	
            <dd class="bouton"><input type="submit" value="Create" class="bouton" /></dd>					
		</dl>
	</fieldset>			
</form>